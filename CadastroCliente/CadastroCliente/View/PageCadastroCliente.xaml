<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CadastroCliente.View.PageCadastroCliente">
    <ContentPage.Content>
        <StackLayout Padding="15,0">
            <Entry x:Name="Nome" Placeholder="Informe seu nome"></Entry>
            <Entry x:Name="Cpf" Placeholder="Informe seu CPF" Keyboard="Numeric"></Entry>
            <Entry x:Name="Email" Placeholder="Inforem seu email" Keyboard="Email"></Entry>
            <Entry x:Name="Telefone" Placeholder="Informe seu telefone" Keyboard="Telephone"></Entry>
          
            <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                <Button x:Name="Salvar" Text="Salvar" Clicked="Salvar_Clicked"></Button>
                <Button x:Name="Editar" Text="Editar" Clicked="Editar_Clicked"></Button>
                <Button x:Name="Excluir" Text="Excluir" Clicked="Excluir_Clicked" ></Button>
            </StackLayout>
            <ListView x:Name="Lista">
                
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>